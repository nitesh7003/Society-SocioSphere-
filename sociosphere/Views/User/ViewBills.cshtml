@model IEnumerable<sociosphere.Models.billmanagement>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Bills</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Roboto:wght@300;400;500&display=swap" rel="stylesheet">
    <style>
        .bills-page-body {
            font-family: 'Roboto', sans-serif;
            background-color: #f0f4f8;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .bills-page-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 40px 20px;
        }

        .bills-page-heading {
            font-family: 'Playfair Display', serif;
            color: #2c3e50;
            font-size: 2.5em;
            text-align: center;
            margin-bottom: 30px;
        }

        .bills-table-container {
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .bills-table {
            width: 100%;
            border-collapse: collapse;
        }

            .bills-table th, .bills-table td {
                padding: 15px;
                text-align: left;
                border-bottom: 1px solid #e0e0e0;
            }

            .bills-table th {
                background-color: #4a90e2;
                color: white;
                font-weight: 500;
                text-transform: uppercase;
                font-size: 0.9em;
                letter-spacing: 1px;
            }

            .bills-table tr:hover {
                background-color: #f5f5f5;
            }

        .bills-pay-button {
            background-color: #2ecc71;
            color: white;
            padding: 8px 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 14px;
            font-weight: 500;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            box-shadow: 0 2px 5px rgba(46, 204, 113, 0.3);
        }

            .bills-pay-button:hover {
                background-color: #27ae60;
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(46, 204, 113, 0.4);
            }

        .bills-icon {
            margin-right: 8px;
        }

        .bills-no-bills {
            text-align: center;
            padding: 40px;
            font-size: 1.2em;
            color: #777;
        }

        .bills-paid-status {
            color: #2ecc71;
            font-weight: 500;
        }
    </style>
</head>
<body class="bills-page-body">
    <div class="bills-page-container">
        <h2 class="bills-page-heading"><i class="fas fa-file-invoice-dollar bills-icon"></i>Your Bills</h2>
        @if (Model.Any())
        {
            <div class="bills-table-container">
                <table class="bills-table">
                    <thead>
                        <tr>
                            <th><i class="fas fa-heading bills-icon"></i>Title</th>
                            <th><i class="fas fa-rupee-sign bills-icon"></i>Amount to Pay</th>
                            <th><i class="fas fa-calendar-alt bills-icon"></i>Month</th>
                            <th><i class="fas fa-info-circle bills-icon"></i>Status</th>
                            <th><i class="fas fa-calendar-check bills-icon"></i>Bill Release Date</th>
                            <th><i class="fas fa-calendar-times bills-icon"></i>Submission Date</th>
                            <th><i class="fas fa-credit-card bills-icon"></i>Pay Bill</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var bill in Model)
                        {
                            <tr>
                                <td>@bill.Title</td>
                                <td>@bill.AmountPay.ToString("C")</td>
                                <td>@bill.Month.ToString("MMMM yyyy")</td>
                                <td>@bill.PaidStatus</td>
                                <td>@bill.BillReleaseDt.ToString("dd-MM-yyyy")</td>
                                <td>@bill.BillSbmtDate?.ToString("dd-MM-yyyy")</td>
                                <td>
                                    @if (bill.PaidStatus == "Pending")
                                    {
                                        <form action="@Url.Action("PayBill", "User")" method="post">
                                            <input type="hidden" name="billId" value="@bill.Id" />
                                            <button type="submit" class="bills-pay-button">
                                                <i class="fas fa-money-bill-wave bills-icon"></i>Pay Now
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="bills-paid-status"><i class="fas fa-check-circle bills-icon"></i>Paid</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="bills-no-bills">
                <i class="fas fa-file-invoice bills-icon"></i>
                <p>No bills found for your flat.</p>
            </div>
        }
    </div>
</body>
</html>