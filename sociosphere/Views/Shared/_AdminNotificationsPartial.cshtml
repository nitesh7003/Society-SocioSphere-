@model Tuple<List<announcement>, List<addcomplaint>>

@if (Model.Item1.Any() || Model.Item2.Any())
{
    @foreach (var announcement in Model.Item1)
    {
        <a href="#" class="dropdown-item notification-item" data-notification-type="announcement" data-notification-id="@announcement.Id">
            <div class="d-flex align-items-center">
                <div class="notification-icon bg-primary rounded-circle">
                    <i class="fas fa-bullhorn text-white"></i>
                </div>
                <div class="ms-3">
                    <h6 class="mb-1">Announcement</h6>
                    <p class="text-muted mb-0"><small>@announcement.AnnounceDate.ToString("MMM dd, yyyy HH:mm")</small></p>
                </div>
            </div>
        </a>
    }
    @foreach (var complaint in Model.Item2)
    {
        <a href="#" class="dropdown-item notification-item" data-notification-type="complaint" data-notification-id="@complaint.Id">
            <div class="d-flex align-items-center">
                <div class="notification-icon bg-warning rounded-circle">
                    <i class="fas fa-exclamation-triangle text-white"></i>
                </div>
                <div class="ms-3">
                    <h6 class="mb-1">New Complaint from :@complaint.name- Flat @complaint.flatno,</h6>
                    <p class="text-muted mb-0"><small>@complaint.raisedate.ToString("MMM dd, yyyy HH:mm")</small></p>
                </div>
            </div>
        </a>
    }
}
else
{
    <p class="dropdown-item text-muted">No new notifications</p>
}