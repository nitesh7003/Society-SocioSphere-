@model sociosphere.Models.addflat

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Flat</title>
   
    <!-- Custom CSS -->
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f4f7fa;
            color: #333;
        }

        .center-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 2rem;
        }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        .card-body {
            padding: 3rem;
        }

        .card-title {
            color: #2c3e50;
            font-weight: 600;
            margin-bottom: 1.5rem;
        }

        .card-description {
            color: #7f8c8d;
            margin-bottom: 2rem;
        }

        .form-group {
            margin-bottom: 2rem;
            position: relative;
        }

            .form-group input,
            .form-group select {
                width: 100%;
                padding: 10px 0 10px 30px;
                font-size: 16px;
                color: #333;
                border: none;
                border-bottom: 1px solid #ddd;
                outline: none;
                background: transparent;
                transition: border-color 0.2s;
            }

                .form-group input:focus,
                .form-group select:focus {
                    border-bottom-color: #3498db;
                }

            .form-group label {
                position: absolute;
                top: 0;
                left: 30px;
                padding: 10px 0;
                font-size: 16px;
                color: #7f8c8d;
                pointer-events: none;
                transition: 0.2s ease all;
            }

            .form-group input:focus ~ label,
            .form-group input:valid ~ label,
            .form-group select:focus ~ label,
            .form-group select:valid ~ label {
                top: -20px;
                left: 0;
                font-size: 14px;
                color: #3498db;
            }

            .form-group i {
                position: absolute;
                top: 12px;
                left: 0;
                color: #7f8c8d;
            }

        .button-container {
            text-align: center;
            margin-top: 2rem;
        }

        .btn-primary {
            background-color: #3498db;
            border: none;
            padding: 12px 30px;
            font-size: 16px;
            font-weight: 500;
            border-radius: 30px;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #2980b9;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(52, 152, 219, 0.3);
            }

        .btn-success {
            background-color: #2ecc71;
            border: none;
            padding: 10px 20px;
            font-size: 14px;
            font-weight: 500;
            border-radius: 20px;
            transition: all 0.3s ease;
        }

            .btn-success:hover {
                background-color: #27ae60;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(46, 204, 113, 0.3);
            }

        .building-image {
            width: 100%;
            max-width: 300px;
            margin-bottom: 2rem;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>
    <div class="center-container">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title"><i class="fas fa-building"></i> Add Flat</h4>
                    <p class="card-description">Enter flat details</p>
                    <form asp-action="AddFlat" method="post" class="forms-sample">
                        <div class="form-group">
                            <i class="fas fa-door-open"></i>
                            <input asp-for="flatno" required="required" />
                            <label asp-for="flatno" class="control-label">Flat Number</label>
                        </div>
                        <div class="form-group">
                            <i class="fas fa-level-up-alt"></i>
                            <input asp-for="floorno" required="required" />
                            <label asp-for="floorno" class="control-label">Floor Number</label>
                        </div>
                        <div class="form-group">
                            <i class="fas fa-archway"></i>
                            <input asp-for="wingname" required="required" />
                            <label asp-for="wingname" class="control-label">Wing Name</label>
                        </div>
                        <div class="form-group">
                            <i class="fas fa-home"></i>
                            <select asp-for="flattype" required="required">
                                <option value=""></option>
                                <option value="1 BHK">1 BHK</option>
                                <option value="2 BHK">2 BHK</option>
                                <option value="3 BHK">3 BHK</option>
                            </select>
                            <label asp-for="flattype" class="control-label">Flat Type</label>
                        </div>
                        <div class="button-container">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-plus-circle"></i> Add Flat
                            </button>
                        </div>
                        <div class="text-center mt-4">
                            <a asp-action="GetAllFlat" class="btn btn-success">
                                <i class="fas fa-list"></i> View all added flats
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>
</html>