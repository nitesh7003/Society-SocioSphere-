<script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
<script>
	document.addEventListener("DOMContentLoaded", function () {
		var options = {
			series: [{
				name: 'Bills',
				data: [/* Data will be populated via Ajax */]
			}],
			chart: {
				type: 'bar',
				height: 350
			},
			plotOptions: {
				bar: {
					horizontal: false,
					columnWidth: '55%',
					endingShape: 'rounded'
				},
			},
			dataLabels: {
				enabled: false
			},
			stroke: {
				show: true,
				width: 2,
				colors: ['transparent']
			},
			xaxis: {
				categories: ['Paid', 'Pending'],
			},
			fill: {
				opacity: 1
			},
			tooltip: {
				y: {
					formatter: function (val) {
						return val + " Bills"
					}
				}
			}
		};

		var chart = new ApexCharts(document.querySelector("#aapexcharts-area"), options);
		chart.render();

		// Fetch data from the server
		fetch('/Admin/GetBillStatusData')
			.then(response => response.json())
			.then(data => {
				chart.updateSeries([{
					name: 'Bills',
					data: [data.paidCount, data.pendingCount]
				}]);
			});
	});
</script>

<script>
	document.addEventListener("DOMContentLoaded", function () {
		// Fetch the latest 5 users from the server
		fetch('/userreg/GetLatestUsers')
			.then(response => response.json())
			.then(data => {
				let tableBody = document.getElementById('user-table-body');
				data.forEach(user => {
					let row = `
							<tr>
								<td>${user.id}</td>
								<td>${user.name}</td>
								<td>${user.email}</td>
								<td>${user.city}</td>
								<td>${user.role}</td>
								<td><img src="/${user.photo}" width="25" class="rounded-circle" alt="${user.name}"></td>
							</tr>
						`;
					tableBody.insertAdjacentHTML('beforeend', row);
				});
			})
			.catch(error => console.error('Error fetching user data:', error));
	});
</script>
