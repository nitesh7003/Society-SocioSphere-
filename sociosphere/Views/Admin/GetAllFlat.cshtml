<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Flats - Sociosphere</title>
   
    <style>
        .all-flats-page {
            font-family: 'Roboto', sans-serif;
            background-color: #f0f4f8;
            color: #333;
            padding: 40px 0;
        }

        .all-flats-container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .all-flats-heading {
            font-family: 'Playfair Display', serif;
            color: #2c3e50;
            font-size: 2.5em;
            text-align: center;
            margin-bottom: 30px;
        }

        .all-flats-card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .all-flats-card-body {
            padding: 40px;
        }

        .all-flats-table {
            margin-bottom: 0;
        }

            .all-flats-table th {
                background-color: #4a90e2;
                color: white;
                font-weight: 500;
                text-transform: uppercase;
                font-size: 0.9em;
                letter-spacing: 1px;
                border: none;
            }

            .all-flats-table td {
                vertical-align: middle;
                border-color: #e0e0e0;
            }

        .all-flats-table-hover tbody tr:hover {
            background-color: #f5f5f5;
        }

        .all-flats-btn {
            border: none;
            padding: 8px 16px;
            border-radius: 5px;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .all-flats-btn-primary {
            background-color: #4a90e2;
            color: white;
        }

            .all-flats-btn-primary:hover {
                background-color: #3a7bd5;
                transform: translateY(-2px);
            }

        .all-flats-btn-danger {
            background-color: #e74c3c;
            color: white;
        }

            .all-flats-btn-danger:hover {
                background-color: #c0392b;
                transform: translateY(-2px);
            }

        .all-flats-btn-success {
            background-color: #2ecc71;
            color: white;
            padding: 12px 24px;
            font-size: 1.1em;
        }

            .all-flats-btn-success:hover {
                background-color: #27ae60;
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(46, 204, 113, 0.4);
            }

        .all-flats-alert {
            border-radius: 8px;
            font-weight: 500;
        }

        .all-flats-alert-dismissible .btn-close {
            padding: 1rem;
        }
    </style>
</head>
<body>
    <div class="all-flats-page">
        <div class="all-flats-container">
            <h2 class="all-flats-heading"><i class="fas fa-building me-3"></i>All Flats</h2>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert all-flats-alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert all-flats-alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="card all-flats-card">
                <div class="card-body all-flats-card-body">
                    <div class="table-responsive">
                        <table class="table all-flats-table all-flats-table-hover">
                            <thead>
                                <tr>
                                    <th><i class="fas fa-hashtag me-2"></i>ID</th>
                                    <th><i class="fas fa-door-open me-2"></i>Flat No</th>
                                    <th><i class="fas fa-layer-group me-2"></i>Floor No</th>
                                    <th><i class="fas fa-building me-2"></i>Wing Name</th>
                                    <th><i class="fas fa-home me-2"></i>Flat Type</th>
                                    <th><i class="fas fa-cogs me-2"></i>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var flat in Model)
                                {
                                    <tr>
                                        <td>@flat.Id</td>
                                        <td>@flat.flatno</td>
                                        <td>@flat.floorno</td>
                                        <td>@flat.wingname</td>
                                        <td>@flat.flattype</td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@flat.Id" class="btn all-flats-btn all-flats-btn-primary me-2">
                                                <i class="fas fa-edit me-1"></i> Edit
                                            </a>
                                            <form asp-action="Delete" method="post" style="display:inline;">
                                                <input type="hidden" name="id" value="@flat.Id" />
                                                <button type="submit" class="btn all-flats-btn all-flats-btn-danger" onclick="return confirm('Are you sure you want to delete this flat?');">
                                                    <i class="fas fa-trash me-1"></i> Delete
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="text-center mt-4">
                        <a asp-action="AddFlat" class="btn all-flats-btn all-flats-btn-success">
                            <i class="fas fa-plus-circle me-2"></i> Add New Flat
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var addNewFlatBtn = document.querySelector('.all-flats-btn-success');
            var addFlatModal = new bootstrap.Modal(document.getElementById('addFlatModal'));

            addNewFlatBtn.addEventListener('click', function (event) {
                event.preventDefault();
                addFlatModal.show();
            });
        });
    </script>
</body>
</html>