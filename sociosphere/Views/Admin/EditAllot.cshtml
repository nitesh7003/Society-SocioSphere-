@model sociosphere.Models.alloteflat
@{
    ViewData["Title"] = "Edit Alloted Flat";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Sociosphere</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Roboto:wght@300;400;500&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .edit-alloteflat-page {
            font-family: 'Roboto', sans-serif;
            background-color: #f0f4f8;
            color: #333;
            padding: 40px 0;
        }

        .edit-alloteflat-container {
            max-width: 600px;
            margin: 0 auto;
        }

        .edit-alloteflat-heading {
            font-family: 'Playfair Display', serif;
            color: #2c3e50;
            font-size: 2.5em;
            text-align: center;
            margin-bottom: 30px;
        }

        .edit-alloteflat-card {
            background-color: #fff;
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            padding: 40px;
        }

        .edit-alloteflat-form-group {
            margin-bottom: 25px;
        }

            .edit-alloteflat-form-group label {
                font-weight: 500;
                margin-bottom: 8px;
                color: #2c3e50;
            }

        .edit-alloteflat-form-control {
            border: 1px solid #e0e0e0;
            border-radius: 5px;
            padding: 10px 15px;
            font-size: 16px;
            transition: border-color 0.3s ease;
        }

            .edit-alloteflat-form-control:focus {
                border-color: #4a90e2;
                box-shadow: 0 0 0 0.2rem rgba(74, 144, 226, 0.25);
            }

        .edit-alloteflat-btn {
            font-weight: 500;
            padding: 12px 24px;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

        .edit-alloteflat-btn-primary {
            background-color: #4a90e2;
            border: none;
            color: white;
        }

            .edit-alloteflat-btn-primary:hover {
                background-color: #3a7bd5;
                transform: translateY(-2px);
            }

        .edit-alloteflat-btn-secondary {
            background-color: #95a5a6;
            border: none;
            color: white;
        }

            .edit-alloteflat-btn-secondary:hover {
                background-color: #7f8c8d;
                transform: translateY(-2px);
            }

        .edit-alloteflat-text-danger {
            color: #e74c3c;
            font-size: 0.9em;
            margin-top: 5px;
        }
    </style>
</head>
<body>
    <div class="edit-alloteflat-page">
        <div class="edit-alloteflat-container">
            <h2 class="edit-alloteflat-heading"><i class="fas fa-edit me-3"></i>Edit Alloted Flat</h2>

            <div class="edit-alloteflat-card">
                <form asp-action="EditAllot" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="edit-alloteflat-form-group">
                        <label asp-for="name"><i class="fas fa-user me-2"></i>Name</label>
                        <input asp-for="name" class="form-control edit-alloteflat-form-control" />
                        <span asp-validation-for="name" class="edit-alloteflat-text-danger"></span>
                    </div>

                    <div class="edit-alloteflat-form-group">
                        <label asp-for="flatno"><i class="fas fa-door-open me-2"></i>Flat Number</label>
                        <input asp-for="flatno" class="form-control edit-alloteflat-form-control" />
                        <span asp-validation-for="flatno" class="edit-alloteflat-text-danger"></span>
                    </div>

                    <div class="edit-alloteflat-form-group">
                        <label asp-for="floorno"><i class="fas fa-layer-group me-2"></i>Floor Number</label>
                        <input asp-for="floorno" class="form-control edit-alloteflat-form-control" />
                        <span asp-validation-for="floorno" class="edit-alloteflat-text-danger"></span>
                    </div>

                    <div class="edit-alloteflat-form-group">
                        <label asp-for="wingname"><i class="fas fa-building me-2"></i>Wing Name</label>
                        <input asp-for="wingname" class="form-control edit-alloteflat-form-control" />
                        <span asp-validation-for="wingname" class="edit-alloteflat-text-danger"></span>
                    </div>

                    <div class="edit-alloteflat-form-group">
                        <label asp-for="flattype"><i class="fas fa-home me-2"></i>Flat Type</label>
                        <input asp-for="flattype" class="form-control edit-alloteflat-form-control" />
                        <span asp-validation-for="flattype" class="edit-alloteflat-text-danger"></span>
                    </div>

                    <div class="edit-alloteflat-form-group">
                        <label asp-for="moveindate"><i class="fas fa-calendar-alt me-2"></i>Move-in Date</label>
                        <input asp-for="moveindate" class="form-control edit-alloteflat-form-control" type="date" />
                        <span asp-validation-for="moveindate" class="edit-alloteflat-text-danger"></span>
                    </div>

                    <div class="edit-alloteflat-form-group">
                        <label asp-for="allotdate"><i class="fas fa-calendar-check me-2"></i>Allotment Date</label>
                        <input asp-for="allotdate" class="form-control edit-alloteflat-form-control" type="date" />
                        <span asp-validation-for="allotdate" class="edit-alloteflat-text-danger"></span>
                    </div>

                    <div class="text-center mt-4">
                        <button type="submit" class="btn edit-alloteflat-btn edit-alloteflat-btn-primary me-2">
                            <i class="fas fa-save me-2"></i>Save Changes
                        </button>
                        <a asp-action="Index" class="btn edit-alloteflat-btn edit-alloteflat-btn-secondary">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>