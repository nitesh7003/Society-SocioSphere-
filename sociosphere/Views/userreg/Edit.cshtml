@model sociosphere.Models.userreg
@{
    ViewData["Title"] = "Edit User";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit User - Sociosphere</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Roboto:wght@300;400;500&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .edit-user-page {
            font-family: 'Roboto', sans-serif;
            background-color: #f0f4f8;
            color: #333;
            padding: 40px 0;
        }

        .edit-user-container {
            max-width: 600px;
            margin: 0 auto;
        }

        .edit-user-heading {
            font-family: 'Playfair Display', serif;
            color: #2c3e50;
            font-size: 2.5em;
            text-align: center;
            margin-bottom: 30px;
        }

        .edit-user-card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .edit-user-card-body {
            padding: 40px;
        }

        .edit-user-form-group {
            margin-bottom: 20px;
        }

        .edit-user-form-label {
            font-weight: 500;
            color: #2c3e50;
            margin-bottom: 5px;
        }

        .edit-user-form-control {
            border: 1px solid #e0e0e0;
            border-radius: 5px;
            padding: 10px 15px;
            font-size: 1em;
            transition: border-color 0.3s ease;
        }

            .edit-user-form-control:focus {
                border-color: #4a90e2;
                box-shadow: 0 0 0 0.2rem rgba(74, 144, 226, 0.25);
            }

        .edit-user-btn {
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            font-weight: 500;
            transition: all 0.3s ease;
            margin-right: 10px;
        }

        .edit-user-btn-primary {
            background-color: #4a90e2;
            color: white;
        }

            .edit-user-btn-primary:hover {
                background-color: #3a7bd5;
                transform: translateY(-2px);
            }

        .edit-user-btn-secondary {
            background-color: #95a5a6;
            color: white;
        }

            .edit-user-btn-secondary:hover {
                background-color: #7f8c8d;
                transform: translateY(-2px);
            }
    </style>
</head>
<body>
    <div class="edit-user-page">
        <div class="edit-user-container">
            <h2 class="edit-user-heading"><i class="fas fa-user-edit me-3"></i>Edit User</h2>

            <div class="card edit-user-card">
                <div class="card-body edit-user-card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="edit-user-form-group">
                            <label asp-for="name" class="edit-user-form-label"><i class="fas fa-user me-2"></i>Name</label>
                            <input asp-for="name" class="form-control edit-user-form-control" />
                        </div>
                        <div class="edit-user-form-group">
                            <label asp-for="email" class="edit-user-form-label"><i class="fas fa-envelope me-2"></i>Email</label>
                            <input asp-for="email" class="form-control edit-user-form-control" />
                        </div>
                        <div class="edit-user-form-group">
                            <label asp-for="city" class="edit-user-form-label"><i class="fas fa-city me-2"></i>City</label>
                            <input asp-for="city" class="form-control edit-user-form-control" />
                        </div>
                        <div class="edit-user-form-group">
                            <label asp-for="password" class="edit-user-form-label"><i class="fas fa-lock me-2"></i>Password</label>
                            <input asp-for="password" class="form-control edit-user-form-control" type="password" />
                        </div>
                        <div class="text-center mt-4">
                            <button type="submit" class="btn edit-user-btn edit-user-btn-primary">
                                <i class="fas fa-save me-2"></i>Save
                            </button>
                            <a asp-action="GetAllUsers" class="btn edit-user-btn edit-user-btn-secondary">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>