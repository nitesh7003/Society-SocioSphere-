@model IEnumerable<sociosphere.Models.userreg>
@{
    ViewData["Title"] = "All Users";
}

<div class="row">
    <div class="col-sm-12">

        <div class="card card-table comman-shadow">
            <div class="card-body">
    <!-- Page Header -->
    <div class="page-header">
        <div class="row">
            <div class="col-sm-12">
                <div class="page-sub-header">
                    <h3 class="page-title">Students</h3>
                    <ul class="breadcrumb">
                                    <li class="breadcrumb-item">all users</a></li>
                       
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- /Page Header -->

   
          
                    <!-- Page Header -->
                   
                    <!-- /Page Header -->

                    <div class="table-responsive">
                        <table class="table border-0 star-student table-hover table-center mb-0 datatable table-striped">
                            <thead class="student-thread">
                                <tr>
                                    <th>
                                        <div class="form-check check-tables">
                                            <input class="form-check-input" type="checkbox" value="something">
                                        </div>
                                    </th>
                                    <th><i class="fas fa-image me-2"></i>Photo</th>
                                    <th><i class="fas fa-user me-2"></i>Name</th>
                                    <th><i class="fas fa-envelope me-2"></i>Email</th>
                                    <th><i class="fas fa-city me-2"></i>City</th>
                                    <th><i class="fas fa-user-tag me-2"></i>Role</th>
                                    <th class="text-end"><i class="fas fa-cogs me-2"></i>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="form-check check-tables">
                                                <input class="form-check-input" type="checkbox" value="something">
                                            </div>
                                        </td>
                                        <td>
                                            <h2 class="table-avatar">
                                                <a href="student-details.html" class="avatar avatar-sm me-2">
                                                    <img src="~/@user.photo" alt="User Photo" class="avatar-img rounded-circle">
                                                </a>
                                            </h2>
                                        </td>
                                        <td>@user.name</td>
                                        <td>@user.email</td>
                                        <td>@user.city</td>
                                        <td>@user.role</td>
                                        <td class="text-end">
                                            <div class="actions">
                                               
                                                <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm bg-danger-light">
                                                    <i class="feather-edit"></i>
                                                </a>
                                                <form asp-action="Delete" method="post" style="display:inline;">
                                                    <input type="hidden" name="id" value="@user.Id" />
                                                    <button type="submit" class="btn btn-sm bg-danger-light" onclick="return confirm('Are you sure you want to delete this user?');">
                                                        <i class="fa fa-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
        </div>

